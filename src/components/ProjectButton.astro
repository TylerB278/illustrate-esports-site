---
import { Image } from "astro:assets";
const { link } = Astro.props;
const { type } = Astro.props;
import type { astroCalledServerError } from "astro:actions";
---

<div class="button">
    <a href=`/projects/${link}` style="link">{type}</a>
</div>

<style>
    .button{
        
        width: fit-content;
         
    }
    a{
        display: flex;
        justify-content: center;
        font-size: 32px;
        font-weight: bold;
        text-decoration: none;
        padding: 20px;
        transition: all 0.3s;
        color: var(--color-accent);
        border: 15px solid var(--color-accent); 
    }
    a:hover{
        
        border: 5px solid var(--color-accent); 
        scale: 140%;
        padding: 10px;
        margin: 20px;
    }
</style>