---
import Layout from "@layouts/Layout.astro";
import SampleComponent from "@components/SampleComponent.astro";
import Container from "@components/Container.astro";
import AstroLogo from "@assets/images/astro-logo-light-gradient.png";
import { Content as SampleMarkdown } from "@content/sample-markdown.md";
import { Image } from "astro:assets";
import ProjectButton from "@components/ProjectButton.astro";


---

<Layout title="Astro Starter">
  <nav>
    <a href="../"><img class="logo" src="/SampleLogo-White-16.png"></img></a>
    <div class="links">
      <a href="/projects/sample" class="navLink">link</a>
      <a href="/projects/sample" class="navLink">link</a>
      <a href="/projects/sample" class="navLink">link</a>
    </div>
  </nav>
  <div class="heroContain">
    <img class="heroImg" src="/SampleLogo-Full-19.png" />
  </div>
  <Container>
    <ProjectButton link="sample" type="Branding & Logo Design"/>
  </Container>
  <div class="scrollContain">
    <a class="case"></a>
    <a class="case"></a>
    <a class="case"></a>
    <a class="case"></a>
  </div>
  <footer>
    <div class="footLinks">
      <a href="/projects/sample" class="fnavLink">link</a>
      <a href="/projects/sample" class="fnavLink">link</a>
      <a href="/projects/sample" class="fnavLink">link</a>
    </div>
  </footer>
</Layout>

<style>

  /* navigation styling */
    nav{
    position: sticky;
    top: 0px;
    display: flex;
    justify-content: space-between;
    height: 100px;
    background-color: var(--color-background);
  }
  .links{
    margin: 20px;
    align-content: center;
  }
  .navLink{
    /* padding: 20px; */
    font-size: 24px;
    color: white;
  }
  .logo{
    width: 100px;
    margin-left: 20px;
    padding: 5px;
  }

/* hero image */
  .heroImg{
    width: 80vw;
    max-width: 1500px;
  }
  .heroContain{
    height: 95vh;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  /* footer content */
  footer{
    position: sticky;
    top: 0px;
    display: flex;
    justify-content: space-between;
    margin-top: 80px;
    height: 100px;
    background-color: var(--color-background);
  }
  .footLinks{
    margin: 20px;
    align-content: center;
  }
  .fnavLink{
    color: white;
    font-size: 24px;
  }

  .scrollContain{
    margin-top: 50px;
    padding-left: 7.5vw;
    margin-bottom: 50px;
    white-space: nowrap;
    overflow-x: auto;
    overflow-y: hidden;
    scroll-snap-type: x mandatory;
    height: 50vw;
    /* border: 10px solid var(--color-accent); */
  }
  .case{
    display: inline-block;
    scroll-snap-align: center;
    width: 80vw;
    height: 50vw;
    margin-right: 25vw;
    background-color: var(--color-accent);
  }
</style>